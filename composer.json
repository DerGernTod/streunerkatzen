{
    "name": "silverstripe/installer",
    "type": "silverstripe-recipe",
    "description": "The SilverStripe Framework Installer",
    "require": {
        "php": ">=5.6.0",
        "silverstripe/recipe-plugin": "^1.2",
        "silverstripe/recipe-cms": "4.2.1@stable",
        "silverstripe-themes/simple": "~3.2.0",
        "symbiote/silverstripe-gridfieldextensions": "^3",
        "heyday/silverstripe-menumanager": "^3.0",
        "squizlabs/php_codesniffer": "^3.4",
        "symbiote/silverstripe-memberprofiles": "~4.0",
        "leafo/lessphp": "^0.5.0",
        "jasonlewis/resource-watcher": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },
    "extra": {
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "install-frameworkmissing.html",
            "install.php",
            "web.config"
        ]
    },
    "config": {
        "process-timeout": 0
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "scripts": {
        "compile-less": [
            "@php scripts/less-compile.php"
        ],
        "watch-less": [
            "@php scripts/watch-less.php"
        ]
    }
}
